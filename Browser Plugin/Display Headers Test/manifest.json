{
  "name": "Veracity Spearhead Provenance Viewer",
  "version": "1.0",
  "manifest_version": 3,
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "AJAX Detector"
  },
  "permissions": [
    "unlimitedStorage",
    "storage",
    "scripting",
    "nativeMessaging",
    "webRequest",
    "activeTab",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "provenance-tab.html",
        "provenance-tab.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
